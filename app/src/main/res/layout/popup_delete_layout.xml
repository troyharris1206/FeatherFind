<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="200dp"
    android:layout_height="220dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Content1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are about to delete your account," />

    <TextView
        android:id="@+id/Content2"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please tap Cancel if this was a mistake." />

    <TextView
        android:id="@+id/Content3"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otherwise type 'yes' and tap Delete." />

    <EditText
        android:id="@+id/etDeleteProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="text"
        android:text="We're sorry to see you go"
        android:textColor="#D1D0D0"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/etDeleteProfile">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F98E55"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="20dp"
            android:backgroundTint="#F98E55"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />
    </LinearLayout>


</LinearLayout>